<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_myback"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/One_hundred_forty_five"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/comint_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:padding="@dimen/Thirty"
            android:src="@drawable/left_jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提交申请" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty"
        android:layout_marginTop="@dimen/Thirty"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/Thirty"
            android:text="推荐人         "
            android:textColor="@color/cl_person"
            android:textSize="@dimen/thirty_six" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/One_hundred"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/Thirty"
            android:background="@null"
            android:hint="可不填"
            android:paddingLeft="@dimen/twenty"
            android:singleLine="true"
            android:textColor="@color/cl_btn"
            android:textSize="@dimen/thirty_six" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/Thirty"
            android:text="联系手机     "
            android:textColor="@color/cl_person"
            android:textSize="@dimen/thirty_six" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/One_hundred"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_code"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@null"
            android:hint="请输入手机号"
            android:paddingLeft="@dimen/twenty"
            android:singleLine="true"
            android:textColor="@color/cl_person"
            android:textSize="@dimen/thirty_six" />

        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/Thirty"
            android:text="发送验证码" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/Thirty"
            android:text="输入验证码 "
            android:textColor="@color/cl_person"
            android:textSize="@dimen/thirty_six" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/One_hundred"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/Thirty"
            android:background="@null"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/twenty"
            android:singleLine="true"
            android:textColor="@color/cl_btn"
            android:textSize="@dimen/thirty_six" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/Thirty"
            android:text="邮箱             "
            android:textColor="@color/cl_person"
            android:textSize="@dimen/thirty_six" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/One_hundred"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/Thirty"
            android:background="@null"
            android:hint="可不填"
            android:paddingLeft="@dimen/twenty"
            android:singleLine="true"
            android:textColor="@color/cl_btn"
            android:textSize="@dimen/thirty_six" />

    </LinearLayout>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Thirty"
        android:layout_marginTop="@dimen/Forty_two"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/isagree"
        android:text="  我已阅读并同意《聚财盆学习网充值服务协议》"
        android:textColor="@color/cl_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/one_hundred_eight"
        android:background="@android:color/white"
        android:src="@drawable/kt_shenqing" />

</LinearLayout>
