<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_myback"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/One_hundred_forty_five"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/ibt_attestation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:padding="@dimen/Thirty"
            android:src="@drawable/left_jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="身份认证" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/Thirty"
            android:text="真实姓名      "
            android:textColor="@color/cl_person"
            android:textSize="@dimen/thirty_six" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/One_hundred"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="请输入真实姓名"
            android:singleLine="true"
            android:textColor="@color/cl_btn"
            android:textSize="@dimen/thirty_six" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/Thirty"
            android:text="身份证号码  "
            android:textColor="@color/cl_person"
            android:textSize="@dimen/thirty_six" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/One_hundred"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/Thirty"
            android:background="@null"
            android:hint="请输入身份证号码"
            android:singleLine="true"
            android:textColor="@color/cl_btn"
            android:textSize="@dimen/thirty_six" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/Thirty"
            android:text="性别              "
            android:textColor="@color/cl_person"
            android:textSize="@dimen/thirty_six" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/Thirty"
            android:orientation="horizontal"
            android:textColor="@color/cl_btn">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@null"
                android:drawableLeft="@drawable/xuanzesex"
                android:text="  男"
                android:textSize="@dimen/thirty_six" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/two_hundred_one"
                android:button="@null"
                android:drawableLeft="@drawable/xuanzesex"
                android:text="  女"
                android:textSize="@dimen/thirty_six" />

        </RadioGroup>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Thirty"
            android:text="手持身份证正面照" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_picture"
            android:layout_marginLeft="@dimen/ninety"
            android:layout_toRightOf="@+id/tv_picture"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kt_touxiang" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:src="@drawable/photo_shangchuan" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/one_hundred_twenty"
            android:layout_height="@dimen/One_hundred_eighty"
            android:layout_margin="@dimen/Thirty"
            android:src="@drawable/pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv"
            android:layout_marginRight="@dimen/Thirty"
            android:layout_toRightOf="@+id/iv"
            android:text="@string/shuoming"
            android:textColor="@color/cl_btn"
            android:textSize="@dimen/thirty_six" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/Forty_two"
        android:paddingTop="@dimen/one_hundred_eight"
        android:src="@drawable/kaitong_next" />


</LinearLayout>
