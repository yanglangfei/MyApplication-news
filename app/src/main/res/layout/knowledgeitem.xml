<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_knowledge"
            android:layout_width="@dimen/three_hundred_forty"
            android:layout_height="@dimen/Two_hundred"
            android:layout_marginLeft="@dimen/Thirty"
            android:layout_marginTop="@dimen/Forty_two"
            android:src="@drawable/approve" />

        <TextView
            android:id="@+id/knowledge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Thirty"
            android:layout_marginRight="@dimen/Thirty"
            android:layout_marginTop="@dimen/Forty_two"
            android:layout_toRightOf="@+id/iv_knowledge"
            android:singleLine="true"
            android:text="非打死你个大 非机动第三广大范德萨个的撒个人个人果然是公司分管"
            android:textColor="@color/cl_sex"
            android:textSize="@dimen/thirty_eight" />

        <TextView
            android:id="@+id/knowledge_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/knowledge_title"
            android:layout_marginLeft="@dimen/Thirty"
            android:layout_marginRight="@dimen/Thirty"
            android:layout_marginTop="@dimen/Thirty"
            android:layout_toRightOf="@+id/iv_knowledge"
            android:maxLines="3"
            android:text="非打死你个大 非更大幅度个的撒范德萨更大幅度撒个第三方更大幅度机动第三广大范德萨个的撒个人个人果然是公司分管"
            android:textColor="@color/cl_btn"
            android:textSize="@dimen/Thirty_two" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_knowledge"
            android:layout_marginBottom="@dimen/Forty_two"
            android:layout_marginRight="@dimen/Thirty"
            android:layout_marginTop="@dimen/Thirty"
            android:text="收藏时间：2015.02.12"
            android:textColor="@color/cl_btn"
            android:textSize="@dimen/Thirty_two" />
    </RelativeLayout>

</LinearLayout>
