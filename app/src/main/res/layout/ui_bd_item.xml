<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:id="@+id/rk_relat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_ranking"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="gdsafds" />

        <ImageView

            android:id="@+id/rk_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/rk_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/rk_photo"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/rk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="天山童姥"
            android:textSize="13dp"
            android:textColor="#222"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rk_touxiang" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/rk_name"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贡献值 36558"
            android:textSize="10dp"
            android:textColor="#aaa"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/rk_relat"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaa"></View>
</RelativeLayout>