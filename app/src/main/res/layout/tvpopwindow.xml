<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="46dp"
    android:layout_marginRight="46dp"
    android:background="@android:color/holo_red_dark"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty"
        android:gravity="center"
        android:text="解锁"
        android:background="#f7f7f7"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/Forty" />

    <LinearLayout
        android:padding="@dimen/Thirty"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="200dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_hundred_thirty"
            android:gravity="center"
            android:text="本次解锁需花费【100】个聚财币"
            android:textColor="@color/my"
            android:textSize="@dimen/Forty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_hundred_ten"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/word_queren" />

            <ImageView
                android:id="@+id/iv_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:src="@drawable/word_quxiao" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
