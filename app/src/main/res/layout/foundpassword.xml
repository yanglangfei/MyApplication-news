<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_image"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/found_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/Thirty"
        android:src="@drawable/guanbi" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo_zhuce" />


    <LinearLayout
        android:layout_width="@dimen/nine_hundred"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_fifty"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Forty_two"
                android:src="@drawable/tel" />

            <EditText
                android:id="@+id/find_account"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="@dimen/One_hundred"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Thirty"
                android:layout_marginRight="@dimen/Forty_two"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColor="@color/cl_btn"
                android:textSize="@dimen/thirty_eight" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cl_login"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_fifty"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Forty_two"
                android:src="@drawable/yanzhengma" />

            <EditText
                android:id="@+id/found_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/One_hundred"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Thirty"
                android:layout_marginRight="@dimen/Forty_two"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColor="@color/cl_btn"
                android:textSize="@dimen/thirty_eight" />

            <ImageButton
                android:id="@+id/ibt_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/Thirty"
                android:background="@null"
                android:src="@drawable/sendqian" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cl_login"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_fifty"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Forty_two"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/found_newPass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/One_hundred"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Thirty"
                android:layout_marginRight="@dimen/Forty_two"
                android:background="@null"
                android:hint="请输入您的新密码"
                android:inputType="text"
                android:textColor="@color/cl_btn"
                android:textSize="@dimen/thirty_eight" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cl_login"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_fifty"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Forty_two"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/found_surePass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/One_hundred"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Thirty"
                android:layout_marginRight="@dimen/Forty_two"
                android:background="@null"
                android:hint="请确认您的新密码"
                android:inputType="text"
                android:textColor="@color/cl_btn"
                android:textSize="@dimen/thirty_eight" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/found_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="74dp"
        android:background="@null"
        android:src="@drawable/denglu_queren" />

</LinearLayout>
