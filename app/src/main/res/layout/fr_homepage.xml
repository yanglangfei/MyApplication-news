<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/tabtitle"></include>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="视频直播" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/home_video"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="暂无直播"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/darker_gray"></View>

            <include layout="@layout/tabtitle"></include>

            <com.example.view.TestListView
                android:id="@+id/homelv_idea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.example.view.TestListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/darker_gray"></View>

            <include layout="@layout/tabtitle"></include>

            <com.example.view.TestListView
                android:id="@+id/homelv_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.example.view.TestListView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
